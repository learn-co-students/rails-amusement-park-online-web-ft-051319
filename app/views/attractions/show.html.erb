<!DOCTYPE html>
<html>
  <h1> <%= @attraction.name %> </h1>
  <% if @user.admin == true %>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
  <% else %>
    <%= button_to "Go on this ride", rides_path, params: {'attraction[id]' => @attraction.id} %>
  <% end %>
</html>