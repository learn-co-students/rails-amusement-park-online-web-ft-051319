<h1>Editing Attraction</h1>

<%= form_for @attraction do |f| %>
  <%= f.label "Name" %><br>
  <%= f.text_field :name%><br>
  <%= f.label "Height Requirement (in)" %>
  <%= f.number_field :min_height%><br>
  <%= f.label "How fun is it? (1-5)" %>
  <%= f.number_field :happiness_rating%><br>
  <%= f.label "How nausea-inducing is it? (1-5)" %>
  <%= f.number_field :nausea_rating%><br>
  <%= f.label "How many tickets does it cost?" %>
  <%= f.number_field :tickets%><br>

  <%= f.submit "Update Attraction" %>
<% end %>