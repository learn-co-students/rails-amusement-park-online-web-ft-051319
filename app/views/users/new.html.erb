<h1>Sign Up</h1>
<%= form_for @user do |f| %>
    <%= f.label "Name:" %><br>
    <%= f.text_field :name %><br>
    <%= f.label "Height (in)" %><br>
    <%= f.text_field :height %><br>
    <%= f.label "How happy are you? 1-5" %><br>
    <%= f.text_field :happiness %><br>
    <%= f.label "How nauseous are you? 1-5" %><br>
    <%= f.text_field :nausea %><br>
    <%= f.label "How many dollars are in your pocket?" %><br>
    <%= f.text_field :tickets %><br>
    <%= f.label "Check box if you are a theme park owner" %><br>
    <%= f.check_box :admin %><br>
    <%= f.label "Password:" %><br>
    <%= f.password_field :password %><br>
    <%= f.submit "Create User" %>
    <%end%>